$("#menuToggle").click(function() {
  $("body").toggleClass("menu-opened");
});




$('.modal').on('shown.bs.modal', function (e) {
  $('.mobile-menu').toggleClass('position-static position-absolute');
})
$('.modal').on('hidden.bs.modal', function () {
  $('.mobile-menu').toggleClass('position-static position-absolute');
});